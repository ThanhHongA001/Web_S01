{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Chrome",   // Kết nối đến Chrome đang chạy với cổng 9222
      "port": 9222,
      "request": "attach",
      "type": "chrome",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "chrome",
      "request": "launch",          // Mở Chrome truy cập vào localhost:8080
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
// This configuration file is for Visual Studio Code to debug a Chrome application.
// The first configuration attaches to an already running instance of Chrome on port 9222.